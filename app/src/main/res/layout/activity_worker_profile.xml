<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Activity.WorkerProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rLayout_back_and_drwable"
                android:layout_width="match_parent"
                android:layout_height="176dp"
                android:layout_alignParentTop="true"
                android:background="@drawable/blue_bottom_corner">

                <Button
                    android:id="@+id/btnBack_act_workerSetup"
                    style="@style/button_fill_transparent_blueText"
                    android:layout_width="128dp"
                    android:layout_height="64dp"
                    android:layout_alignParentStart="true"
                    android:text="BACK"
                    android:textAppearance="@style/buttonTxtApp"
                    android:textColor="@color/white_FFFFFF" />
                <ImageButton
                    android:id="@+id/imgBtn_activityWorkerProfile_MENU"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_margin="16dp"
                    android:background="@color/blue_2F80ED"
                    android:tint="@color/white_FFFFFF"
                    android:src="@drawable/outline_menu_24"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    />

            </RelativeLayout>

        </RelativeLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="15dp"
            android:backgroundTint="@color/white_F9F0F0"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rLayout_back_and_drwable"
            android:layout_marginTop="-105dp">
            <LinearLayout
                android:id="@+id/act_workerLayout_ProfileHolder"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">



                <LinearLayout
                    android:id="@+id/lLayout_holderTv_WorkerInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imgV_WorkerProfile"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="122dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_baseline_account_box_24"
                        app:tint="@color/blue_2F80ED" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_marginTop="21dp"
                            android:layout_height="wrap_content"
                            android:text="Firstname Lastname Suffix"
                            android:paddingRight="8dp"
                            android:textAllCaps="true"
                            android:textAppearance="@style/TxtApp_16"
                            android:textColor="@color/black_323F4B" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Worker Proffession"
                            android:textAllCaps="true"
                            android:textAppearance="@style/TxtApp_12"
                            android:textColor="@color/black_323F4B" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Work description"
                            android:textAppearance="@style/textStyle_SubcaptionGray"
                            android:textColor="@color/black_323F4B" />

                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/tv_Reviews_actWorkerProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginEnd="143dp"
                        android:layout_marginRight="20dp"
                        android:letterSpacing=".2"
                        android:text="Reviews"
                        android:textAllCaps="true"
                        android:textAppearance="@style/textStyle_captionBlack"
                        android:textColor="@color/gray_7B8794"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_Gigs_actWorkerProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginEnd="80dp"
                        android:letterSpacing=".2"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:text="Gigs"
                        android:textAppearance="@style/textStyle_captionBlack"
                        android:textColor="@color/gray_7B8794" />


                    <TextView
                        android:id="@+id/tv_act_countReviews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="66dp"
                        android:layout_below="@+id/tv_Reviews_actWorkerProfile"
                        android:layout_toStartOf="@+id/tv_act_countGigs"
                        android:text="69"
                        android:textStyle="bold"
                        android:textAppearance="@style/textStyle_captionBlack"
                        android:textColor="@color/black_323F4B" />
                    <TextView
                        android:id="@+id/tv_act_countGigs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_Gigs_actWorkerProfile"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="94dp"
                        android:textStyle="bold"
                        android:text="96"
                        android:textAppearance="@style/textStyle_captionBlack"
                        android:textColor="@color/black_323F4B" />





                </RelativeLayout>
                <com.shuhart.stepview.StepView
                    android:id="@+id/step_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="16dp"

                    app:sv_selectedCircleColor="@color/blue_2F80ED"
                    app:sv_selectedTextColor="@color/black_323F4B"
                    app:sv_stepLineWidth="2dp"
                    app:sv_stepPadding="4dp"
                    app:sv_nextTextColor="@color/black_323F4B"
                    app:sv_nextStepLineColor="@color/gray_7B8794"
                    app:sv_doneCircleColor="@color/blue_2F80ED"
                    app:sv_doneStepLineColor="@color/blue_2F80ED"
                    app:sv_doneTextColor="@color/black_323F4B"
                    app:sv_doneCircleRadius="16dp"
                    app:sv_selectedCircleRadius="12dp"
                    app:sv_selectedStepNumberColor="@color/white_FFFFFF"
                    app:sv_stepViewStyle="@style/StepView"
                    app:sv_doneStepMarkColor="@color/white_FFFFFF"
                    app:sv_stepNumberTextSize="12sp"
                    app:sv_animationType="Line"
                    />

            </LinearLayout>



        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>





    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:background="@color/white_FFFFFF"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/blue_2F80ED">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/act_worker_toolBar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/blue_2F80ED" />

            <com.google.android.material.tabs.TabLayout

                android:id="@+id/act_worker_profile_tabLayout"
                android:layout_width="match_parent"
                app:tabTextAppearance="@style/textStyle_tabTitleStyle"
                android:layout_height="wrap_content"/>

        </com.google.android.material.appbar.AppBarLayout>


        <androidx.viewpager.widget.ViewPager
            android:id="@+id/act_worker_profile_ViewPager"
            android:layout_width="match_parent"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            android:layout_height="match_parent">
        </androidx.viewpager.widget.ViewPager>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</LinearLayout>