<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/white_F9F0F0"
        app:cardElevation="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <RatingBar
                android:id="@+id/rb_ratings_reviews"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:transformPivotX="2dp"
                android:layout_margin="8dp"
                android:transformPivotY="0dp"
                android:numStars="5"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:isIndicator="false"
                android:progressTint="@color/blue_2F80ED"
                android:progressBackgroundTint="@color/blue_2F80ED"
                android:rating="3.5" />


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imV_fragmentReviews_actWorker"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/arey_sample_pic_chat"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_fragmentReviews_Name_actWorker"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TxtApp_12"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:layout_marginBottom="6dp"
                        android:text="firstname, lastname"/>
                    <TextView
                        android:id="@+id/tv_fragmentReviews_Comment_actWorker"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/textStyle_SubcaptionBlack"
                        android:text="Text here"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_adapterChatList_chatDate"
                android:layout_width="match_parent"
                android:layout_marginRight="6dp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/textStyle_SubcaptionBlack"
                android:textAlignment="textEnd"
                android:layout_marginBottom="6dp"
                android:text="Mon-9am May 11,2021"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>