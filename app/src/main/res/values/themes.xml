<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Worker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">
            @color/blue_2F80ED
        </item>
        <item name="colorPrimaryVariant">
            @color/white_FFFFFF
        </item>
        <item name="colorOnPrimary">
            @color/white_F9F0F0
        </item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">
            @color/black_323F4B
        </item>
        <item name="colorSecondaryVariant">
            @color/gray_7B8794
        </item>
        <item name="colorOnSecondary">
            @color/black_323F4B
        </item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">
            ?attr/colorPrimaryVariant
        </item>
        <!-- Customize your theme here. -->
    </style>


    <style name="sample_txt_input_layout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
    </style>
    <style name="button_outline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/blue_2F80ED</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textColor">@color/blue_2F80ED</item>
    </style>

    <style name="button_fill" parent="Widget.MaterialComponents.Button">
        <item name="backgroundColor">@color/blue_2F80ED</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textColor">@color/white_FFFFFF</item>
    </style>

    <style name="textStyle_header">
        <item name="android:textSize">32sp</item>
        <item name="fontFamily">@font/mulish_regular</item>
        <item name="android:textColor">@color/black_323F4B</item>
    </style>
    <style name="textStyle_subHeader">

    </style>
    <style name="textStyle_title1">
        <item name="android:textSize">56sp</item>
        <item name="fontFamily">@font/mulish_regular</item>
        <item name="android:textColor">@color/black_323F4B</item>
    </style>
    <style name="textStyle_title2">
        <item name="android:textSize">26sp</item>
        <item name="fontFamily">@font/mulish_regular</item>
        <item name="android:textColor">@color/black_323F4B</item>
    </style>

    <style name="textStyle_captionGray">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/mulish_regular</item>
        <item name="android:textColor">@color/gray_7B8794</item>
    </style>
    <style name="textStyle_captionBlue">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/mulish_regular</item>
        <item name="android:textColor">@color/blue_2F80ED</item>
    </style>
    <style name="textStyle_captionBlack">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/mulish_regular</item>
        <item name="android:textColor">@color/black_323F4B</item>
    </style>

</resources>